<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblNombres"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Nombres:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/lblnombres"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:text="XXXXXX"
        android:layout_toRightOf="@+id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblTelefono"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Telefono:"
        android:layout_below="@+id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lbltelefono"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblNombres"
        android:text="XXXXXX"
        android:layout_toRightOf="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblFechaRegistro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Fecha de registro:"
        android:layout_below="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblfecharegistro"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblTelefono"
        android:text="XXXXXX"
        android:layout_toRightOf="@+id/lblFechaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</RelativeLayout>